@import 'nib'

@require '_variables';
@require 'text-field';

select-field {
  display: block;
  position: relative;
}

.select-field-wrapper {
  position: relative;
  margin: 0;
  margin-top: $padding-small;

  &:after {
    content: "\f0dc";
    font-family: FontAwesome;
    color: $color-text-1;
    line-height: 2.3em;
    position: absolute;
    right: 10px;
    top: 0;
    width: 20px;
    text-align: center;
  }

  &.disabled {
    opacity: $opacity-disabled;
  }
}

.select-field-select {
  width: 100%;
  height: 100%;
  font-family: inherit;
  font-size: inherit;
  background: linear-gradient(top, white, $color-fill-2);
  text-align: left;
  box-sizing: border-box;
  color: inherit;
  display: block;
  border-radius: $border-radius;
  border: $border;
  appearance: none;
  padding: 6px 9px;

  &:focus {
    background-color: white;
    outline: none;
    border-color: $border-color-focused;
    box-shadow: $box-shadow-focused;
  }

  &:disabled {
    opacity: $opacity-disabled;
  }
}

.select-field-filter-text-input {
  @extend .text-field-input;
}

.select-field {
  position: relative;
  vertical-align: middle;
  cursor: pointer;
  user-select: none;

  &.disabled {
    cursor: default;
  }

  &.has-error {
    .select-field-select {
      border-color: $border-color-error;

      &:focus {
        box-shadow: $box-shadow-error-focused;
      }
    }
  }

  &.open {
    .field-error {
      display: none;
    }

    .select-field-filter-text-input {
      border-color: $border-color-focused;
      box-shadow: $box-shadow-focused;
      border-bottom-left-radius: 0;
      border-bottom-right-radius: 0;
    }
  }
}

.select-field-list-container {
  z-index: 1050; // Needs to be higher than .has-error
  position: absolute;
  top: 100%;
  width: 100%;
  background-color: white;
  border: $border;
  border-radius: $border-radius;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  border-color: $border-color-focused;
  box-shadow: $box-shadow-focused;
  box-sizing: border-box;
  overflow: auto;
}

.select-field-list {
  padding: 0;
  margin: 0;
  list-style: none;

  .select-field-list-item {
    display: block;
    padding: 6px 9px;

    strong {
      font-weight: inherit;
    }

    &:hover,
    &.hover {
      background-color: light-blue;
    }
    &.active {
      font-weight: bold;
    }
  }
}
