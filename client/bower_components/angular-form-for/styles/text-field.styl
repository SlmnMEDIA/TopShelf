@require '_mixins';
@require '_variables';

text-field {
  display: block;
}

.text-field-input {
  border-radius: 4px;
  border: $border;
  box-shadow: $box-shadow;
  color: inherit;
  display: block;
  font-family: inherit;
  font-size: inherit;
  line-height: 1.5;
  margin: 0;
  outline: none;
  padding: 6px 9px;
  width: 100%;
  margin-top: $padding-small;
  box-sizing: border-box;

  placeholder-color($color-fill-4);

  &.has-icon-before {
    padding-left: 40px;
  }
  &.has-icon-after {
    padding-right: 40px;
  }
}

.text-field-input-wrapper {
  position: relative;
  width: 100%;

  .text-field-input-icon {
    position: absolute;
    top: 50%;
    width: 20px;
    text-align: center;
    line-height: 1em;
    margin-top: -0.5em;
    color: $color-text-1;

    &.text-field-input-icon-before {
      left: 10px;
    }

    &.text-field-input-icon-after {
      right: 10px;
    }
  }
}

.text-field {
  &.disabled {
    .text-field-input {
      opacity: $opacity-disabled;
    }
  }

  &.has-error {
    .text-field-input {
      border-color: $border-color-error;
    }
  }

  .text-field-input {
    &:focus {
      border-color: $border-color-focused;
      box-shadow: $box-shadow-focused;
    }
  }
}
